<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:padding="8dp">

    <!-- Display on top -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:text="0"
        android:textSize="36sp"
        android:textColor="@color/green"
        android:gravity="end|center_vertical"
        android:background="@color/bg_display"
        android:typeface="monospace"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"/>

    <!-- Keypad below -->
    <GridLayout
        android:id="@+id/gridKeys"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <Button android:id="@+id/btn7" android:text="7" style="@style/CalcButton"/>
        <Button android:id="@+id/btn8" android:text="8" style="@style/CalcButton"/>
        <Button android:id="@+id/btn9" android:text="9" style="@style/CalcButton"/>
        <Button android:id="@+id/btnDivide" android:text="÷" style="@style/CalcButtonOp"/>

        <!-- Row 2 -->
        <Button android:id="@+id/btn4" android:text="4" style="@style/CalcButton"/>
        <Button android:id="@+id/btn5" android:text="5" style="@style/CalcButton"/>
        <Button android:id="@+id/btn6" android:text="6" style="@style/CalcButton"/>
        <Button android:id="@+id/btnMultiply" android:text="×" style="@style/CalcButtonOp"/>

        <!-- Row 3 -->
        <Button android:id="@+id/btn1" android:text="1" style="@style/CalcButton"/>
        <Button android:id="@+id/btn2" android:text="2" style="@style/CalcButton"/>
        <Button android:id="@+id/btn3" android:text="3" style="@style/CalcButton"/>
        <Button android:id="@+id/btnMinus" android:text="−" style="@style/CalcButtonOp"/>

        <!-- Row 4 -->
        <Button android:id="@+id/btn0" android:text="0" style="@style/CalcButton"/>
        <Button android:id="@+id/btnClear" android:text="C" style="@style/CalcButtonClear"/>
        <Button android:id="@+id/btnEquals" android:text="=" style="@style/CalcButtonEqual"/>
        <Button android:id="@+id/btnPlus" android:text="+" style="@style/CalcButtonOp"/>

        <!-- Row 5 -->
        <Button android:id="@+id/btnOnOff" android:text="ON/OFF" style="@style/CalcButton" android:layout_columnSpan="4" android:layout_gravity="fill_horizontal"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
